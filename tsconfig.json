{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/styles/*":["./src/styles/*"],
      "@/component/*":["./src/interfaces/component/*"],
      "@/repositories/*":["./src/adapter/repositories/*"],
      "@/services/*":["./src/core/services/*"],
      "@/contracts/*":["./src/core/domain/contracts/*"],
      "@/controller/*":["./src/adapter/controller/*"],
      "@/middleware/*":["./src/adapter/middleware/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
